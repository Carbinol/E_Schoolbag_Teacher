<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/login_button_mainpage"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:background="#2a458c"
        android:src="@drawable/login"/>

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/show_student_list"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:background="#2a458c"
        android:src="@drawable/check_student_list"/>

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/new_teacher_work"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:background="#2a458c"
        android:src="@drawable/new_teacher_work"/>

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/check_teacher_work"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:background="#2a458c"
        android:src="@drawable/check_teacher_work"/>

    <ImageButton
        android:layout_marginTop="5dp"
        android:id="@+id/check_student_work"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:background="#2a458c"
        android:src="@drawable/check_student_work"/>
</LinearLayout>